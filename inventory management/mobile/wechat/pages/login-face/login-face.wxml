<!--index.wxml-->
<view class="index-body">
  <view class="view-title">
    <text class="index-title">Sign in</text>
  </view>
  <view class="btn-container">
    <view class="view-shop">
    <button class='btn-shop' bindtap='shopButton' hover-class='btn-hover'>password</button>
    </view>
    <view class="view-commodity">
    <button class='btn-commodity' >face</button>
    </view>
  </view>
  <view class="view-middle" bindtap='chooseImage'>
    <view class="view-middle-bottom">
    <image src="{{ img_url }}" mode='aspectFit' class='commodity-photo'/>
    <image class='camera' src='../../images/image.png'></image>
    </view>
  </view>

</view>
